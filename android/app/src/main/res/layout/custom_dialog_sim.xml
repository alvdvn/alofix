<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/curve_shap"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="Chọn SIM làm mặc định để gọi"
        android:textColor="#111111"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/llActionSim1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_sim1" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="SIM 1"
            android:textSize="18sp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#111111"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/llActionSim2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_sim2" />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="SIM 2"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:background="#ffffff"
            android:textColor="#111111"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/llCheckbox_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_box_dual_sim"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/Terms_and_condition_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:text="Luôn hỏi"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>